{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true                                 
  },
  "exclude": [
    "node_modules",
    "dist",
    "types"
  ]
}
